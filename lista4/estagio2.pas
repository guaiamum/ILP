program estagio;const 	MAX_ALUNOS = 1000;type	registro_aluno = record		codigo, media : integer;	end;var	alunos : array[1..MAX_ALUNOS] of registro_aluno;	n, i, indice_melhor, turma : integer;begin	readln(n); { le numero de alunos da primeira turma }		turma := 1;	while n > 0 do 	begin		for i := 1 to n do { le dados dos alunos }						readln(alunos[i].codigo, alunos[i].media);		{ escreve resposta }				writeln('Turma ', turma);		turma := turma + 1;		indice_melhor := 1;		for i := 2 to n do { procura aluno de maior media }				begin			if alunos[i].media >= alunos[indice_melhor].media then			begin				indice_melhor := i;			end;		end;		for i:= 1 to n do			if alunos[i].media = alunos[indice_melhor].media then			begin			write(alunos[i].codigo,' ');			end;			writeln;			{ le numero de alunos da proxima turma }						readln(n);		end;	end.